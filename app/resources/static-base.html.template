{% extends "base.html.template" %}
{% load i18n %}

{% block head %}
  {{block.super}}
  <link rel="stylesheet" href="{{env.global_url}}/sidebar.css">
  <link rel="stylesheet" href="{{env.global_url}}/googleorg.css">
{% endblock head %}

{% block header %}
  <div class="header">
    <div class="header-left">
      <a href="{{env.global_url}}">
        <img src="{{env.global_url}}/google-person-finder.gif"
            width="260" height="40">
      </a>
    </div>
  </div>
{% endblock header %}

{% block container %}
  <div class="container">
    <div class="content">
      <h1>
        {% block heading %}{% trans "Person Finder" %}{% endblock heading %}
      </h1>
      {% block content %}{% endblock content %}
    </div>
  </div>

  <div class="sidebar">
    {% block sidebar %}
      <a href="{{env.global_url}}">Home</a>
    {% endblock sidebar %}
  </div>
{% endblock container %}

{% block footer %}
  <div class="footer links">
    &copy; Google &#xb7;
    <a href="http://www.google.org/">Google.org Home</a> &#xb7;
    <a href="http://www.google.org/accounts/TOS">
      {% trans "Terms of Service" %}</a> &#xb7;
    <a href="http://code.google.com/p/googlepersonfinder/">
      {% trans "Developers" %}
    </a>
  </div>
{% endblock footer %}
