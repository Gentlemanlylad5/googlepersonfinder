{# Template fragment for the "Add a note" form (on view and create pages).  #}

{% load i18n %}

        {% if not markdup %}
        <input type="hidden" name="add_note" value="yes">
        <input type="hidden" name="id" value="{{params.id}}">
        {% endif %}

        <table class="create note column" cellpadding="0" cellspacing="0"
            role="complementary">
          <tr>
            <td>
              <h2>
                {% if not markdup %}
                {% trans "Tell us the status of this person" %}
                {% else %}
                {% trans "Mark records as duplicate" %}
                {% endif %}
              </h2>
              <table class="note input" cellpadding="0" cellspacing="0">
                {% if not markdup %}
                <tr>
                  <td class="status section">
                    <h3>
                      {% trans "Status of this person" %}
                    </h3>
                    <table class="fields">
                      <tr>
                        <td>
                          <select id="status" name="status" value="">
                            {% for status in env.status_options %}
                              <option value="{{status.value}}"
                                  {% ifequal params.status status.value %}
                                    selected='selected'
                                  {% endifequal %}>
                                {{status.text}}
                              </option>
                            {% endfor %}
                          </select>
                        </td>
                      </tr>
                    </table>
                  </td>
                </tr>
                {% endif %}
                <tr>
                  <td class="mandatory text section">
                    <h3>
                      {% trans "Message (required)" %}
                    </h3>
                    <div class="hint">
                      {% if not markdup %}
                        {% trans "A message for this person or others seeking this person" %}
                      {% else %}
                        {% trans "Please explain why you think these are the same person" %}
                      {% endif %}
                    </div>
                    <table class="fields">
                      <tr>
                        <td>
                          <textarea name="text" id="text" cols=40
                            rows=5>{{params.text}}</textarea>
                        </td>
                      </tr>
                    </table>
                  </td>

                </tr>
                {% if not markdup %}
                <tr>
                  <td class="location section">
                    <h3>
                      {% trans "Last known location" %}
                    </h3>
                    <div class="hint">
                      {% trans "Type an address or open the map below and indicate the location by moving the pin." %}
                    </div>
                    <table class="fields">
                      <tr>
                        <td>
                          <input name="last_known_location"
                              id="last_known_location" size="40"
                              value="{{params.last_known_location}}" />
                        </td>
                      </tr>
                    </table>
                    {% if env.maps_api_key %}
                      <table class="map-container">
                        <tr>
                          <td>
                            <div id="map_canvas_show_link" style="display: none">
                              <a href='#' onclick="toggle('map_canvas', $('last_known_location').value); return false;" >
                              {% trans "Show Map" %}
                              </a>
                            </div>
                            <div id="map_canvas_hide_link" style="display: none">
                              <a href='#' onclick="toggle('map_canvas', $('last_known_location').value); return false;" >
                              {% trans "Hide Map" %}
                              </a>
                            </div>
                            <script type="text/javascript">
                              ToggleMapLink('map_canvas');
                            </script>
                            <div id="map_canvas" class="hidden map">
                            </div>
                          </td>
                        </tr>
                      </table>
                    {% endif %}
                  </td>
                </tr>
                <tr>
                  <td class="photo section">
                    <h3><label for="note_photo_url">
                        {% trans "Photo" %}
                    </label></h3>
                    <div class="hint">
                      {% trans "If you want to attach a photo to this note, upload it or enter its URL address." %}
                    </div>
                    <table class="fields">
                      <tr onclick="$('note_photo_url_radio').checked=true; update_image_input(true);">
                        <td class="radio">
                            <input id="note_photo_url_radio" type="radio"
                                checked="checked" name="note_photo_input">
                        </td>
                        <td class="label">
                          {% trans "URL" %}:
                        </td>
                        <td>
                          <input name="note_photo_url" id="note_photo_url"
                              size="30" value="{{params.photo_url}}" />
                        </td>
                      </tr>
                      <tr onclick="$('note_photo_upload_radio').checked=true; update_image_input(true);">
                        {% comment %} This td can be removed if uploading needs to be disabled {% endcomment %}
                        <td class="radio">
                          <input id="note_photo_upload_radio" type="radio"
                              name="note_photo_input">
                        </td>
                        <td class="label">
                          {% trans "Upload" %}:
                        </td>
                        <td>
                          <input id="note_photo_upload" type="file"
                              name="note_photo" id="note_photo_upload" size="20"
                              disabled="disabled">
                        </td>
                        {% comment %} see above comment {% endcomment %}
                      </tr>
                   </table>
                  </td>
                </tr>
                <tr>
                  <td class="author_made_contact section">
                    <h3 class="mandatory">
                      {% trans "Have you personally talked with this person AFTER the disaster? (required)" %}
                    </h3>
                    <table class="fields">
                      <tr>
                        <td class="instructions" colspan="2">
                          <div>
                            <input type="radio" name="author_made_contact"
                                value="yes" id="author_made_contact_yes"
                                onchange="update_contact()"
                                onclick="update_contact()"
                                {% ifequal params.author_made_contact "yes" %}
                                  checked="checked"
                                {% endifequal %}>
                            <label class="option" for="author_made_contact_yes">
                              {% trans "Yes" %}
                            </label>
                          </div>
                          <div>
                            <input type="radio" name="author_made_contact"
                                value="no" id="author_made_contact_no"
                                onchange="update_contact()"
                                onclick="update_contact()"
                                {% ifnotequal params.author_made_contact "yes" %}
                                  checked="checked"
                                {% endifnotequal %}>
                            <label class="option" for="author_made_contact_no">
                              {% trans "No" %}
                            </label>
                          </div>
                        </td>
                      </tr>
                    </table>
                  </td>
                </tr>
                <tr style="display: none" id="contact_row">
                  <td class="contact section">
                    <h3>
                      {% trans "Missing person's current contact information" %}
                    </h3>
                    <div class="hint">
                      {% trans "How can this person be reached now?" %}
                    </div>
                    <table class="fields">
                      <tr>
                        <td class="label">
                          <label for="phone_of_found_person">
                            {% trans "Phone number" %}:
                          </label>
                        </td>
                        <td>
                          <input name="phone_of_found_person"
                              id="phone_of_found_person" size="20"
                              value="{{params.phone_of_found_person}}" />
                        </td>
                      </tr>
                      <tr>
                        <td class="label">
                          <label for="email_of_found_person">
                            {% trans "E-mail address" %}:
                          </label>
                        </td>
                        <td>
                          <input name="email_of_found_person"
                              id="email_of_found_person" size="20"
                              value="{{params.email_of_found_person}}" />
                        </td>
                      </tr>
                    </table>
                  </td>
                </tr>
                {% endif %}
                {% if not params.create_mode %}
                <tr>
                  <td class="source section">
                    <h3 class="mandatory">
                      {% trans "About you (required)" %}
                    </h3>
                    <div class="hint">
                      {% trans "How others who are interested in this person can contact you" %}
                    </div>
                    <table class="fields">
                      <tr>
                        <td class="label">
                          <label for="author_name" class="mandatory"
                              id="author_name_original">
                            {% trans "Your name" %}:
                          </label>
                        </td>
                        <td>
                          <input name="author_name" id="author_name" size="20"
                              value="{{params.author_name}}" />
                        </td>
                      </tr>
                      <tr>
                        <td class="label">
                          <label for="author_phone" id="author_phone_original">
                            {% trans "Your phone number" %}:
                          </label>
                        </td>
                        <td>
                          <input name="author_phone" id="author_phone" size="20"
                              value="{{params.author_phone}}" />
                        </td>
                      </tr>
                      <tr>
                        <td class="label">
                          <label for="author_email" id="author_email_original">
                            {% trans "Your e-mail address" %}:
                          </label>
                        </td>
                        <td>
                          <input name="author_email" id="author_email" size="20"
                              value="{{params.author_email}}" />
                        </td>
                      </tr>
                      {% include "subscribe.html.template" %}
                    </table>
                  </td>
                </tr>
                {% endif %}
                <tr>
                  <td align=left class="submit">
                    <input type="submit"
                      {% if person.notes_disabled %}
                       disabled="disabled"
                      {% endif %}
                      value="{% spaceless %}
                        {% if markdup %}
                          {% trans "Yes, these are the same person" %}
                        {% else %}
                          {% trans "Save this record" %}
                        {% endif %}{% endspaceless %}"
                      onclick="return validate_fields()">
                    {% if markdup %}
                      <input type="button" value="{% trans "Cancel" %}" onclick="history.go(-1)">
                    {% endif %}
                    <div id="mandatory_field_missing"
                      class="mandatory" style="display: none">
                      {% trans "Please fill in all the required fields." %}
                    </div>
                    <div id="status_inconsistent_with_author_made_contact"
                      class="mandatory" style="display: none">
                      {% trans "The status you selected indicates that you are this person.  If this is true, please also select 'Yes' to indicate that you have contacted this person." %}
                    </div>
                  </td>
                </tr>
              </table>
            </td>
          </tr>
        </table>
